{
    "name": "bound1ess/essence",
    "description":
    "Highly opinionated PHP assertion framework providing clean and flexible BDD style API.",
    "license": "MIT",
    "keywords": ["BDD", "testing", "assertion", "framework"],
    "authors": [
        {
            "name": "bound1ess",
            "email": "bound1ess.dev@gmail.com",
            "role": "developer"
        }
    ],

    "require": {
        "php": ">=5.4.0",
        "php-packages/container": "~1",
        "php-packages/fluent": "~1"
    },

    "require-dev": {
        "phpunit/phpunit": "~4",
        "mockery/mockery": "~0.9"
    },

    "autoload": {
        "psr-4": {
            "Essence\\": "src/Essence/"
        },
        "files": [
            "src/Essence/functions.php"
        ]
    },

    "autoload-dev": {
        "classmap": ["stubs/"],
        "files": [
            "tests/TestCase.php",
            "tests/MatcherTestCase.php"
        ]
    }
}
